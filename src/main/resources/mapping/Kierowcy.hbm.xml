<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="mapping.Kierowcy" table="kierowcy" schema="public" catalog="taxi">
        <id name="kierowcaId">
            <column name="kierowca_id" sql-type="integer"/>
        </id>
        <property name="imie">
            <column name="imie" sql-type="varchar"/>
        </property>
        <property name="nazwisko">
            <column name="nazwisko" sql-type="varchar"/>
        </property>
        <property name="pesel">
            <column name="pesel" sql-type="varchar(11)" length="11"/>
        </property>
        <property name="nrLicencji">
            <column name="nr_licencji" sql-type="integer"/>
        </property>
        <property name="dataWaznosciLicencji">
            <column name="data_waznosci_licencji" sql-type="date"/>
        </property>
        <property name="nrTelefonu">
            <column name="nr_telefonu" sql-type="varchar(9)" length="9"/>
        </property>
        <property name="ocena">
            <column name="ocena" sql-type="integer"/>
        </property>
        <many-to-one name="samochodyBySamochodId" class="mapping.Samochody">
            <column name="samochod_id"/>
        </many-to-one>
        <set name="kursiesByKierowcaId" inverse="true">
            <key>
                <column name="kierowca_id"/>
            </key>
            <one-to-many not-found="ignore" class="mapping.Kursy"/>
        </set>
    </class>
</hibernate-mapping>