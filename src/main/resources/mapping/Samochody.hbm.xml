<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="mapping.Samochody" table="samochody" schema="public" catalog="taxi">
        <id name="samochodId">
            <column name="samochod_id" sql-type="integer"/>
        </id>
        <property name="model">
            <column name="model" sql-type="varchar(255)"/>
        </property>
        <property name="liczbaMiejsc">
            <column name="liczba_miejsc" sql-type="integer"/>
        </property>
        <property name="rokProdukcji">
            <column name="rok_produkcji" sql-type="integer"/>
        </property>
        <property name="dataWaznosciUbezpieczenia">
            <column name="data_waznosci_ubezpieczenia" sql-type="date"/>
        </property>
        <set name="kierowciesBySamochodId" inverse="true">
            <key>
                <column name="samochod_id"/>
            </key>
            <one-to-many not-found="ignore" class="mapping.Kierowcy"/>
        </set>
    </class>
</hibernate-mapping>